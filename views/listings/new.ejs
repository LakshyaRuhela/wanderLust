<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <br /><br />
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation">
      <div class="mg-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="listing[title]"
          placeholder="Enter a Catchy Title"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please choose a Title.</div>
      </div>
      <br />
      <div class="mg-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          placeholder="Enter description about Place"
          class="form-control"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter a short description.</div>
      </div>
      <br />
      <div class="mg-3">
        <label for="image" class="form-label">Image URL</label>
        <input
          name="listing[image]"
          placeholder="Enter image URL / Link"
          type="text"
          class="form-control"
        />
        <div class="invalid-feedback">Please give a valid image</div>
      </div>
      <br />
      <div class="row">
        <div class="mg-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            name="listing[price]"
            placeholder="Enter price"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please enter the price correctly.</div>
        </div>
        <div class="mg-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            name="listing[country]"
            placeholder="Enter country"
            type="text"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please enter the country name.</div>
        </div>
      </div>

      <br />
      <div class="mg-3">
        <label for="location" class="form-label">Location </label>
        <input
          name="listing[location]"
          placeholder="Enter Location"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter a location .</div>
      </div>
      <br /><br />
      <button class="btn btn-dark add-btn mt-3">Add</button>
    </form>
    <br /><br />
  </div>
</div>
